<%- include('header'); %>
    <!-- end menu -->
    <div class="col-lg-10">
        <div class="container-fluid">
            <div class="row d-flex justify-content-between mt-3">
                <div class="col-lg-4 mt-3">
                    <h2>Bài Viết</h2>
                </div>
                <div class="col-lg-4 mt-3">
                    <nav aria-label="breadcrumb ">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
                            <li class="breadcrumb-item"><a href="#">Bài Viết</a></li>
                            <li class="breadcrumb-item"><a href="#">Thêm </a></li>
                        </ol>
                    </nav>
                </div>
            </div>
            <hr>
            <div class="row mt-3">
                <div class="col-lg-12 bg-white pb-4 border">
                    <form action="/admin/cate/edit/<%=categories._id%>" method="POST">
                        <div class="row d-flex justify-content-center">
                            <div class="col-lg-11">
                                <h3 class="mt-4 text-center">SỬA DANH MỤC</h3>
                                <p class="text-center">Bạn có thể sửa danh mục ở đây!</p>


                                <div class="row mt-4">
                                    <div class="col-lg-3">
                                        <label for=""><strong>Tên</strong></label>
                                    </div>
                                    <div class="col-lg-9">
                                        <input type="text" name="title" id="title" value="<%=categories.title%>" class="form-control" placeholder="Jhon Doe" aria-describedby="helpId" required>
                                        <input type="hidden" name="id" value="<%=categories._id%>">
                                    </div>
                                </div>

                                <div class="row mt-5">
                                    <div class="col-lg-3"></div>
                                    <div class="col-lg-9 ">
                                        <div class="row d-flex justify-content-end">
                                            <div class="col-lg-5">
                                                <div class="form-group">
                                                    <a href="/admin/listcate"> <input type="button" name="" id="" value="Huỷ" class="btn btn-cancel"></a>
                                                </div>

                                            </div>
                                            <div class="col-lg-5 pr-2 mr-2">
                                                <div class="form-group">
                                                    <input type="submit" name="submit" id="" value="Sửa Danh Mục" class="btn btn-submit text-center">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer'); %>