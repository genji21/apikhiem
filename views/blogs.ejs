<%- include('header'); %>
    <!-- start content -->
    <div class="col-lg-9">
        <div class="container-fluid">
            <div class="row d-flex justify-content-between mt-3">
                <div class="col-lg-6 text-dark mt-3">
                    <h2>DANH MỤC SẢN PHẨM</h2>
                </div>
                <div class="col-lg-3 mt-3">
                    <nav aria-label="breadcrumb ">
                        <ol class="breadcrumb">
                            <a href="/admin/blog/add"><button type="button" class="btn btn-primary ">Thêm Bài Viết</button></a>
                        </ol>
                    </nav>
                </div>
            </div>
            <hr>
            <div class="row mt-3">
                <div class="col-lg-12 bg-white pb-4 border">
                    <div class="row d-flex justify-content-center">
                        <table class="table table-striped table-inverse table-responsive">
                            <thead class="thead-inverse">
                                <tr>
                                    <th>#</th>
                                    <th width="200" class="img_sp">Ảnh</th>
                                    <th>Tiêu Đề</th>
                                    <th>Mô Tả</th>
                                    <th>Content</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody id="result">
                                <% blogs.forEach(function(data){ %>
                                    <tr>
                                        <td scope="row"><strong>1</strong></td>
                                        <td><img width="200" height="100" src="<%-data.image.split(" , ")[0] %>" class="img-fluid imgsp"></td>
                                        <td><strong><%-data.title.substr(0,50) %></strong></td>
                                        <td><strong><%-data.mota.substr(0,100) %></strong></td>
                                        <td>
                                            <%-data.content %>
                                        </td>
                                        <td>
                                            <a onclick="xoablog('<%-data._id%>')" class="btn btn-danger"><i  class="fa fa-trash" ></i></a>
                                            <a href="/admin/blog/edit/<%-data._id%>" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                    <% }); %>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end content -->
    </div>
    </div>
    <!-- end main -->




    <%- include('footer'); %>